@import "mixins/media-query-variables"

section[data-section="hero"]
  display flex
  justify-content center
  align-items center
  flex-flow column
  font-family var(--sans-serif-fonts)
  color white
  -webkit-font-smoothing antialiased
  min-height calc(100vh - 5rem)
  padding var(--section-vertical-padding) 1em
  text-align left
  background #000
  z-index 1
  translate transform3d(0,0,0)

  @media desktopMinWidthQuery
    padding var(--section-vertical-padding) 5em

  .hero-copy > svg
    display block
    width 11.5em
    max-width 70vw
    fill currentColor

  h1
    margin 0

  h2
    margin 1.5em auto
    font-weight 400
    text-align center

  .actions
    display flex

    @media mobileMaxWidthQuery
      display block
      text-align center
      width 100%
      max-width 100%

      .button
        width 14em
        max-width 100%

        &:not(:last-child)
          margin-bottom 1em

    @media desktopMinWidthQuery
      .button:not(:last-child)
        margin-right 1.25em

    .button
      font-size 1.25em

  .hero-background
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    z-index -1

.slideshow
  height 100%
  width 100%
  position relative

  .background-slide
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    transition opacity 1s ease
    opacity 0
    background-size cover
    background-position center center

    &::after
      content ""
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity .5

    &[data-slide="1"]
      background-image url('~media/peace/1.jpg')

    &[data-slide="2"]
      background-image url('~media/peace/2.jpg')

    &[data-slide="3"]
      background-image url('~media/peace/4.jpg')

    &[data-slide="4"]
      background-image url('~media/peace/5.jpg')

  & > .background-slide:nth-child(1)::after
    background var(--brand-accent-orange)
    filter brightness(10%)

  & > .background-slide:nth-child(2)::after
    background var(--brand-accent-red)
    filter brightness(20%)

  & > .background-slide:nth-child(3)::after
    background var(--brand-accent-blue)
    filter brightness(20%)

  & > .background-slide:nth-child(4)::after
    background var(--brand-accent-purple1)
    filter brightness(30%)

  &[data-active-slide="1"] > .background-slide:nth-child(1),
  &[data-active-slide="2"] > .background-slide:nth-child(2),
  &[data-active-slide="3"] > .background-slide:nth-child(3),
  &[data-active-slide="4"] > .background-slide:nth-child(4),
  &.static-slide > .background-slide
    opacity 1

  &[data-active-slide="1"] > .background-slide:not(:nth-child(5)):not(:nth-child(1)):not(:nth-child(2)),
  &[data-active-slide="2"] > .background-slide:not(:nth-child(1)):not(:nth-child(2)):not(:nth-child(3)),
  &[data-active-slide="3"] > .background-slide:not(:nth-child(2)):not(:nth-child(3)):not(:nth-child(4)),
  &[data-active-slide="4"] > .background-slide:not(:nth-child(3)):not(:nth-child(4)):not(:nth-child(5))
    background-image none !important
