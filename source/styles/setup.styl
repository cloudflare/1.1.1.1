section[data-section="setup"]
  background #fff
  color #000
  display flex
  justify-content center
  flex-flow column
  font-size .85em

  padding calc(var(--section-vertical-padding) / 2) 12px
  width 56em
  max-width 100%
  margin 0 auto

  .instructions
    display none

  &[data-platform="mac-os"] .instructions[data-platform="mac-os"],
  &[data-platform="linux"] .instructions[data-platform="linux"],
  &[data-platform="windows"] .instructions[data-platform="windows"],
  &[data-platform="android"] .instructions[data-platform="android"],
  &[data-platform="iphone"] .instructions[data-platform="iphone"]
  &[data-platform="router"] .instructions[data-platform="router"]
    display block

  .instruction-picker
    display flex
    align-items center
    justify-content center
    margin-bottom 1em

    & > *:not(:last-child)
      margin-right 1.7rem

    .choice
      padding .3em .6em
      text-transform none
      letter-spacing initial
      font-size 1.7rem

      .label
        margin-left .6em

      // Background color fix
      &.selected svg.fa-linux
        background white
        border-radius 4px
        padding 1px

        path
          fill black


  .instruction-video
    display block
    width 1100px
    margin 0 auto
    max-width 100%
