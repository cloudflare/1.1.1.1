section[data-section="explanation"]
  display flex
  justify-content center
  flex-flow column
  font-size .85em

  padding calc(var(--section-vertical-padding) / 2) 12px
  width 56em
  max-width 100%
  margin 0 auto

  .features
    display grid
    grid-column-gap 3em
    grid-template-columns repeat(3, 1fr)
