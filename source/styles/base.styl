@import "mixins/media-query-variables"

:root
  --serif-fonts Georgia, serif
  --hero-fonts "Helvetica Neue", "Helvetica", sans-serif
  // --sans-serif-fonts "Avenir", "Open Sans", Helvetica, Arial, sans-serif
  --sans-serif-fonts "Open Sans", Helvetica, Arial, sans-serif
  --monospace-fonts Monaco, "Bitstream Vera Sans Mono", "Lucida Console", Terminal, monospace
  --accent-fonts "Roboto Slab", sans-serif
  --text-color #000000
  --accent-color #348af0
  --accent-text-color #0069e4
  --section-vertical-padding 4em
  --border-radius .1875em

  --brand-accent-red #f16975
  --brand-accent-orange #f69259
  --brand-accent-yellow #ffdb6f
  --brand-accent-green #65cc9a
  --brand-accent-light-blue #76c4e2
  --brand-accent-purple1 #8176b5
  --brand-accent-purple2 #ba77b1
  --brand-accent-blue #408bc9

*
  box-sizing inherit

html
  text-rendering optimizeLegibility
  font-family var(--sans-serif-fonts)
  font-size 10px
  line-height 1.5
  word-wrap break-word
  box-sizing border-box
  color var(--text-color)

body
  font-size 2em
  margin 0

.desktop-only
  @media mobileMaxWidthQuery
    display none !important

.mobile-only
  @media desktopMinWidthQuery
    display none !important

.cf-dash-desktop-only
  @media cfDashDesktopMaxWidthQuery
    display none !important

@media (max-width: 56em)
  :root
    --section-vertical-padding: 3em

  body
    font-size: 1.7em

@media (max-width: 48em)
  body
    font-size: 1.5em

@media (max-width: 36em)
  :root
    --section-vertical-padding 2em

@media (min-height: 48em) and (min-width: 42em)
  :root
    --section-vertical-padding 5em

.light-on-dark
  color white
  text-shadow 0 0 6px hsla(0, 0%, 0%, 0.66)

.language-selector
  position absolute
  top .5em
  right .5em
  font-size .7em

  @media mobileMaxWidthQuery
    font-size 1.2em

  .selector-label
    display inline-block
    & > *:not(:last-child)
      margin-right .5em

  .dropdown
    display none

  &[data-dropdown="visible"] .dropdown
    display block

section[data-section]
  // min-height 100vh
  position relative

[role="button"], .button
  cursor pointer

.button
  display inline-block
  appearance none
  background none
  border none
  padding .6em 2.5em
  font-weight 600
  font-family var(--sans-serif-fonts)
  letter-spacing .2em
  text-transform uppercase
  cursor pointer
  position relative
  text-decoration none
  border 2px solid transparent
  user-select none
  color black
  transition transform .1s ease-in-out

  .button-content
    display inline-block
    border-bottom 1px solid transparent
    transition border-bottom-color .1s ease-in-out

  &:hover
    transform translate3d(0, -1px, 0)
    outline none

    .button-content
      border-bottom-color currentColor

  &:focus
    outline none

  &:not(:hover):focus .button-content
    border-bottom-style dashed

  &:active
    transform translate3d(0, 1px, 0)

  &.primary, &.selected
    background black
    color white

    &:hover .button-content
      border-bottom-color white

  &.secondary
    border-color black

    &:hover .button-content
      border-bottom-color black

    // &::before
    //   box-shadow inset 0px 0px 0px 1px rgba(0,0,0,.2)


@import hero
@import explanation
@import setup
@import faq
@import share

