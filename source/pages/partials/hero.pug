section(data-section="hero")
  .language-selector(role="button" data-ref="languageSelector")
    .selector-label
      i.fas.fa-globe
      span.chosen-language!=htmlWebpackPlugin.options.t('language')
      i.fas.fa-caret-down

    .dropdown
      span.language(
        class={selected: htmlWebpackPlugin.options.localeCode === 'en-US'}
        data-locale='en-US') English
      span.language(
        class={selected: htmlWebpackPlugin.options.localeCode === 'es'}
        data-locale='es') Español
      span.language(
        class={selected: htmlWebpackPlugin.options.localeCode === 'fr'}
        data-locale='fr') Français
      span.language(
        class={selected: htmlWebpackPlugin.options.localeCode === 'de'}
        data-locale='de') Deutsch
      span.language(
        class={selected: htmlWebpackPlugin.options.localeCode === 'zh-Hans'}
        data-locale='zh-Hans') 简体中文
      span.language(
        class={selected: htmlWebpackPlugin.options.localeCode === 'zh-Hant'}
        data-locale='zh-Hant') 中國傳統的
      span.language(
        class={selected: htmlWebpackPlugin.options.localeCode === 'ja-jp'}
        data-locale='ja-jp') 日本語

  .hero-background
    .slideshow.desktop-only(data-ref="slideshow" data-active-slide="1")
      .background-slide(data-slide="1")
      .background-slide(data-slide="2")
      .background-slide(data-slide="3")
      .background-slide(data-slide="4")

    .slideshow.mobile-only.static-slide
      .background-slide(data-slide="2")

  h3!=htmlWebpackPlugin.options.t('hero.introducing')

  h1.hero-copy(alt="1.1.1.1 DNS resolver")
    include ../../media/logo.svg

  h2!=htmlWebpackPlugin.options.t('hero.description')

  .actions
    a.button.secondary.inverted(role="button" data-scroll href="#setup-instructions")
      .button-content!=htmlWebpackPlugin.options.t('hero.getStarted')
    .spacer.mobile-only
    a.button.secondary.inverted(role="button" data-scroll href="#explanation")
      .button-content!=htmlWebpackPlugin.options.t('hero.info')
