section(data-section="hero")
  .hero-background
    .slideshow(data-ref="slideshow" data-active-slide="1")
      .background-slide(data-slide="1")
      .background-slide(data-slide="2")
      .background-slide(data-slide="3")
      .background-slide(data-slide="4")
      .background-slide(data-slide="5")

  .language-selector
    .selector-label
      i.fas.fa-globe
      span.chosen-language English
      i.fas.fa-caret-down

    .dropdown
      span.language(data-locale='en-US') English
      span.language(data-locale='es') Español
      span.language(data-locale='fr') Français
      span.language(data-locale='de') Deutsch
      span.language(data-locale='zh-Hans') 简体中文
      span.language(data-locale='zh-Hant') 中國傳統的
      span.language(data-locale='ja-jp') 日本語

  .hero-copy.light-on-dark
    include ../../media/logo.svg

    //- h3 Setup in minutes. Completely free, forever.

section(data-section="hero-continued")
    .logo
      include ../../media/logo.svg
    h2 You’re 5 minutes away from browsing a faster, more private internet.
