section(data-section="hero")
  .language-selector(
    tabindex="3"
    role="button"
    data-ref="languageSelector")
    .selector-label
      include ../../media/globe.svg
      span.chosen-language!=htmlWebpackPlugin.options.locale.label
      include ../../media/caret.svg

    .dropdown
      each locale in htmlWebpackPlugin.options.locales.filter(locale => locale.code !== htmlWebpackPlugin.options.locale.code)
        a.language(
          href="/" + locale.path
          class={selected: htmlWebpackPlugin.options.locale.code === locale.code})
          | #{locale.label}

  .hero-background
    .slideshow.desktop-only(data-ref="slideshow" data-active-slide="1")
      .background-slide(data-slide="1")
      .background-slide(data-slide="2")
      .background-slide(data-slide="3")
      .background-slide(data-slide="4")

    .slideshow.mobile-only.static-slide
      .background-slide(data-slide="4")

  h3!=htmlWebpackPlugin.options.t('hero.introducing')

  h1.hero-copy(alt="1.1.1.1 DNS resolver")
    include ../../media/logo.svg

  h2!=htmlWebpackPlugin.options.t('hero.description')

  .actions
    a.button.secondary.inverted(
      tabindex="1"
      role="button"
      data-scroll
      href="#setup-instructions")
      .button-content!=htmlWebpackPlugin.options.t('hero.getStarted')
    .spacer.mobile-only
    a.button.secondary.inverted(
      tabindex="2"
      role="button"
      data-scroll
      href="#explanation")
      .button-content!=htmlWebpackPlugin.options.t('hero.info')
